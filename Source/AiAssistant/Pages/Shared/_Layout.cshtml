<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AI Assistant</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="app-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            @* <div class="sidebar-header"> *@
            @*     <img src="/api/placeholder/32/32" alt="Logo" class="logo" /> *@
            @*     <span>AI Assistant</span> *@
            @* </div> *@
            <ul class="sidebar-nav">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Index" ? "active" : "")" asp-page="/Index">
                        <i class="fas fa-home"></i>
                        <span>Home</span>
                    </a>
                </li>
                @* <li class="nav-item"> *@
                @*     <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/VoiceChat" ? "active" : "")" asp-page="/VoiceChat"> *@
                @*         <i class="fas fa-microphone"></i> *@
                @*         <span>Voice Chat</span> *@
                @*     </a> *@
                @* </li> *@
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/UploadAndManageService" ? "active" : "")" asp-page="/UploadAndManageService">
                        <i class="fas fa-file-alt"></i>
                        <span>Documents</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/SearchFiles" ? "active" : "")" asp-page="/SearchFiles">
                        <i class="fas fa-comments"></i>
                        <span>Chat</span>
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
<header class="top-header">
    <div id="menu-container"></div>
    <p class="ai-header-text">AI Assistant</p>
</header>

<style>
    .top-header {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 15px 20px;
        background-color: #8A65F7;
        color: white;
        position: relative;
    }
    
    .ai-header-text {
        font-weight: 700;
        font-size: 2.5rem;
        margin: 0;
        color: white;
        text-align: center;
    }
    
    #menu-container {
        position: absolute;
        left: 20px;
    }
    
    .mobile-menu-button {
        background: transparent;
        border: 1px solid white;
        color: white;
        font-size: 18px;
        padding: 8px 12px;
        border-radius: 4px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .sidebar.show {
        transform: translateX(0);
    }
    
    @@media (max-width: 768px) {
        .sidebar {
            transform: translateX(-100%);
            transition: transform 0.3s ease;
        }
    }
</style>

            <!-- Page Content -->
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>