@page
@model HomeModel
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    @if (Model.IsAuthenticated)
    {
        <div class="user-info-card mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Welcome Back!</h5>
                    <div class="user-details">
                        <p class="mb-1"><strong>Name:</strong> @Model.UserName</p>
                        <p class="mb-0"><strong>Email:</strong> @Model.UserEmail</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row justify-content-center g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3>Upload Document</h3>
                    <p>Upload and analyze documents using AI</p>
                    <a asp-page="/UploadAndManageService" class="btn btn-primary">Get Started</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3>Document Search</h3>
                    <p>Search through documents intelligently</p>
                    <a asp-page="/SearchFiles" class="btn btn-primary">Get Started</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .user-info-card {
        max-width: 800px;
        margin: 0 auto;
    }

        .user-info-card .card {
            background-color: #f8f9fa;
            border: none;
            border-radius: 10px;
        }

        .user-info-card .card-title {
            color: #333;
            font-size: 1.5rem;
        }

    .user-details {
        color: #666;
    }

        .user-details strong {
            color: #333;
        }

    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .btn-primary {
        background-color: #6d5bcd;
        border-color: #6d5bcd;
        padding: 0.5rem 1.5rem;
    }

        .btn-primary:hover {
            background-color: #5a4ab8;
            border-color: #5a4ab8;
        }
</style>